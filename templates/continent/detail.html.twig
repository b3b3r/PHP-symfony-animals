{% extends 'base.html.twig' %}

{% block title %}DÃ©tail{% endblock %}
{% block myTitle %}{{continent.name}}{% endblock %}
{% block body %}
  <h2 class="border-bottom border-primary">{{continent.name|capitalize}}</h2>
        <div class="row">
        {% for animal in continent.animals %}
            <div class="col-12 col-md-6">
                <div class="row align-items-center" >
                    <div class="col-6 text-center">
                        <img src="{{asset('images/' ~ animal.picture)}}" alt="nom animal" />
                    </div>
                    <div class="col-6">
                        <h2><a href='{{path("animal-detail",{"id":animal.id})}}'>{{animal.name}}</a></h2>
                        <div>{{animal.description}}</div>
                        <h2><a class="btn btn-primary" href='{{path("family-detail",{"id":animal.family.id})}}'>{{animal.family.name|capitalize}}</a></h2>
                        <div>
                            {% for c in animal.continents %}
                                {% if c.id != continent.id %}
                                    <a href="{{path("continent-detail", {"id": c.id})}}" class="btn btn-warning">{{c.name}}</a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
{% endblock %}
